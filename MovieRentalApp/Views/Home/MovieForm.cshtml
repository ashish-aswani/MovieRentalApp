@model MovieRentalApp.ViewModels.MovieAndGenreViewModel
@{
    ViewBag.Title = "MovieForm";
}

<h2>Movie Form</h2>

@using (Html.BeginForm("SaveMovie", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieName)
        @Html.TextBoxFor(m => m.Movie.MovieName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.DateAdded)
        @Html.TextBoxFor(m => m.Movie.DateAdded, "{0:d MM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Stock)
        @Html.TextBoxFor(m => m.Movie.Stock, new { @class = "form-control" })
    </div>


    <div class="form-group">

        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.Genre,
             new SelectList(Model.Genres, "Id", "GenreName"), "Select", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Movie.Id);
    <button class="btn btn-primary" type="submit">Save</button>


}

