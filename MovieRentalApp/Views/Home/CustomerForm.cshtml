@*@model MovieRentalApp.Models.Customer*@

@model MovieRentalApp.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "Customer Form";
}

<h2>CustomerForm</h2>

@using (Html.BeginForm("SaveUser", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.CustomerName)
        @Html.TextBoxFor(m => m.Customer.CustomerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.CustomerName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Dob)
        @Html.TextBoxFor(m => m.Customer.Dob,"{0:d MM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Customer.Dob)
    </div>


    <div class="form-group">

        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId,
             new SelectList(Model.MembershipTypes, "Id", "Type"),"Select", new { @class = "form-control" })
    </div>

    <div class="checkbox">
        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter)
        Subsribed to news letter?
    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    @Html.AntiForgeryToken()
    <button class="btn btn-primary" type="submit">Save</button>


}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }
